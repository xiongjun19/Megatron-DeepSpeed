{
  "train_batch_size" : 16,
  "gradient_accumulation_steps": 1,
  "train_micro_batch_size_per_gpu": 8,
  "steps_per_print": 2,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0001,
      "betas": [0.8,0.999],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
       "device": "nvme",
       "nvme_path": "./offload_dir",
       "buffer_count": 5,
       "pin_memory": true
     },
     "offload_param": {
       "device": "nvme",
       "nvme_path": "./offload_dir",
       "buffer_count": 5,
       "buffer_size": 1e9,
       "max_in_cpu": 8e9,
       "pin_memory": true
     },
     "contiguous_gradients": true,
     "overlap_comm": true  
  },
  "fp16":{
    "enabled": true 
  },
  "gradient_clipping": 1.0,
  "wall_clock_breakdown" : false
}
