{
  "train_batch_size" : 64,
  "gradient_accumulation_steps": 4,
  "train_micro_batch_size_per_gpu": 16,
  "steps_per_print": 2,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0001,
      "betas": [0.8,0.999],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
        "device": "cpu",
	"pin_memory": true
     },
    "offload_param": {
       "device": "cpu",
       "pin_memory": true
     },
     "contiguous_gradients": true,
     "overlap_comm": true  
  },
  "fp16":{
    "enabled": true 
  },
  "gradient_clipping": 1.0,
  "wall_clock_breakdown" : false
}
